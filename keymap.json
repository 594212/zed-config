// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    //rgrip
    "bindings": {
      "56781": "pane::SplitRight",
      "56782": ["workspace::ActivatePaneInDirection", "Right"],
      "56783": "workspace::NewCenterTerminal",
      "56784": "pane::CloseItemsToTheLeft",
      "56785": ["terminal::SendText", "prg -t rust -t sass"],
      "56786": ["terminal::SendKeystroke", "56784 56785 enter"]
    }
  },
  {
    //global keybindings
    "bindings": {
      "alt-v": "workspace::ToggleVimMode",
      "alt-w": "pane::CloseActiveItem",
      "ctrl-shift-w": "pane::CloseActiveItem",
      "ctrl-w": "workspace::CloseAllDocks",
      "alt-s": "workspace::NewCenterTerminal"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl i": "editor::ShowSignatureHelp",
      "shift-enter": "editor::NewlineBelow",
      "ctrl-o": "pane::GoBack",
      // "j k": ["workspace::SendKeystrokes", "escape"],
      "ctrl-i": "pane::GoForward"
      //
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-right": "pane::ActivateNextItem",
      "alt-left": "pane::ActivatePrevItem",
      "ctrl-w up": "pane::SplitUp",
      "ctrl-w down": "pane::SplitDown",
      "ctrl-w left": "pane::SplitLeft",
      "ctrl-w right": "pane::SplitRight"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-w ctrl-left": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w ctrl-right": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w ctrl-up": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w ctrl-down": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-w shift-left": ["workspace::SwapPaneInDirection", "Left"],
      "ctrl-w shift-right": ["workspace::SwapPaneInDirection", "Right"],
      "ctrl-w shift-up": ["workspace::SwapPaneInDirection", "Up"],
      "ctrl-w shift-down": ["workspace::SwapPaneInDirection", "Down"],
      "alt-q": "file_finder::Toggle"
    }
  },
  {
    "context": "Workspace && vim_mode == normal",
    "bindings": {
      "space o": "outline::Toggle",
      "space w": "project_symbols::Toggle",
      "space f": "file_finder::Toggle",
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-c": "workspace::ToggleVimMode"
    }
  },
  {
    "context": "Workspace && vim_mode == insert",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "alt-a": "workspace::ToggleLeftDock",
      "ctrl-a": "project_panel::NewFile",
      "ctrl-d": "project_panel::Delete"
    }
  },
  {
    "context": "!ProjectPanel",
    "bindings": {
      "alt-a": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock",
      "ctrl-shift-w": "pane::CloseActiveItem",
      "alt-w": "pane::CloseActiveItem",
      "ctrl-shift-t": "workspace::NewTerminal",
      "alt-s": "pane::CloseActiveItem",
      "ctrl-o": null
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "ctrl-enter": "search::SelectPrevMatch"
    }
  }
]
