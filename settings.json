// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "show_hints": true,
    "version": "2"
  },
  "base_keymap": "VSCode",
  "vim_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "alacritty gruvbox soft bright"
  },
  "terminal": {
    "cursor_shape": "bar",
    "blinking": "on",
    "env": {
      "EDITOR": "zed"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "procMacro": {
        "ignored": [
          // optional:
          // "component",
          "server"
        ]
      }
    }
  },
  "languages": {
    "HTML": {
      "language_servers": ["vscode-html-language-server", "superhtml"],
      "formatter": { "language_server": { "name": "superhtml" } }
    }
  },
  "scrollbar": {
    "show": "auto"
  }
}
